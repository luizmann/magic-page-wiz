{
  "name": "magic-page-wiz",
  "version": "1.0.0",
  "description": "Create pages and sales pages with a magic wizard",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "client": "cd client && npm start",
    "server": "nodemon server/index.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "keywords": ["pages", "sales", "wizard", "react", "express"],
  "author": "Luiz Mann",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  }
}