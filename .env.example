# Variáveis de Ambiente - Magic Page Wiz

# Ambiente
NODE_ENV=production

# Porta do servidor (Render configura automaticamente)
PORT=10000

# Database (para futuras implementações)
# DATABASE_URL=postgresql://user:password@host:port/database

# API Keys (para futuras integrações)
# UPLOAD_SERVICE_API_KEY=your_upload_service_key
# ANALYTICS_API_KEY=your_analytics_key

# Configurações de Segurança
# JWT_SECRET=your_super_secret_jwt_key
# SESSION_SECRET=your_session_secret

# Configurações de Upload
MAX_FILE_SIZE=10mb
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# URLs
# FRONTEND_URL=https://magic-page-wiz.onrender.com
# API_URL=https://magic-page-wiz.onrender.com/api